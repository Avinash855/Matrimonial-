  <script>
    // Favorite icon toggle functionality
    function toggleFavourite(icon) {
      icon.classList.toggle('favourited');
      icon.textContent = icon.classList.contains('favourited') ? 'üíì' : '‚ù§Ô∏è';
    }

    // Show Chat Modal functionality
    function showChatModal(profileName) {
      alert('Chat with ' + profileName + ' - Please buy the membership to get full access.');
    }

    // Show Membership Section
    function showMembership() {
      document.getElementById('membership-section').style.display = 'block';
    }
  </script>
